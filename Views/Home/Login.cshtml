
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form name="userInfo" method="post" action="~/Home/Login">
            <div class="form-group">
                <label for="InputEmail">電子郵件</label>
                <input type="email" class="form-control" id="InputEmail" name="txtEmail">
            </div>
            <div class="form-group">
                <label for="InputPassword">密碼</label>
                <input type="text" class="form-control" id="InputPassword" name="txtPassword">
            </div>
            <input type="submit" value="送出" />
        </form>
    </div>
    <div class="col-3"></div>
</div>
